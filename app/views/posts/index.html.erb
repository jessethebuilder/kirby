<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>Posts</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Date</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @posts.each do |p| %>
            <tr>
              <td><%= p.title %></td>
              <td><%= p.user.name %></td>
              <td><%= p.created_at.strftime('%D') %></td>
              <td><%= link_to 'View', p, class: 'btn btn-primary btn-sm' %></td>
              <td>
                <% if user_signed_in? && p.user == current_user %>
                  <%= link_to 'Edit', edit_post_path(p), class: 'btn btn-info btn-sm' %>
                <% end %>
              </td>
              <td>
                <% if user_signed_in? && p.user == current_user %>
                  <%= link_to 'Delete', post_path(p), method: :delete,
                               class: 'btn btn-danger btn-sm',
                               data: {confirm: "Are you sure?"} %>
                <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
