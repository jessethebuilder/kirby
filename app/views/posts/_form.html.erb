<%= form_for(post) do |f| %>
  <div class="row">
    <div class="col-sm-12">
      <%= error_explanation post %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group req">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="col-sm-6"></div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
